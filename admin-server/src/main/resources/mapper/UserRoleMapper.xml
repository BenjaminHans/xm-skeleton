<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xm.admin.modules.base.dao.mapper.UserRoleMapper">

    <select id="findByUserId" resultType="com.xm.admin.modules.base.entity.Role">
      SELECT r.id id, name
      FROM st_admin_role ur
      LEFT JOIN st_role r
      ON ur.role_id = r.id
      WHERE user_Id = #{userId}
    </select>
</mapper>
